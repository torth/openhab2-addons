<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="tado"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <thing-type id="thermostat">
        <label>tado Thermostat</label>
        <description>An individual tado thermostat</description>

        <channels>
            <channel id="mode" typeId="mode"/>
            <channel id="humidity" typeId="humidity" />
            <channel id="insideTemperature" typeId="insideTemperature" />
            <!--<channel id="outsideTemperature" typeId="outsideTemperature" />
            <channel id="solarIntensity" typeId="solarIntensity" />
            <channel id="weatherState" typeId="weatherState" />-->
            <channel id="linkState" typeId="linkState" />
            <channel id="heatingState" typeId="heatingState" />
            <channel id="targetTemperature" typeId="targetTemperature" />
            <channel id="terminationTimer" typeId="terminationTimer" />
            <channel id="serverStatus" typeId="serverStatus" />
        </channels>
        
        <config-description>
            <parameter name="email" type="text" required="true">
                <label>Email Address</label>
                <description>Email Address to login to Tado API</description>
            </parameter>
            <parameter name="password" type="text" required="true">
                <context>password</context>
                <label>Password</label>
                <description>Password to login to Tado API</description>
            </parameter>
            <parameter name="homeId" type="integer" required="true">
                <label>Home ID</label>
                <description>ID of the home containing this thermostat</description>
            </parameter>
            <parameter name="zoneId" type="integer" required="true">
                <label>Zone ID</label>
                <description>ID of the zone containing this thermostat</description>
            </parameter>
            <parameter name="useCelsius" type="boolean" required="false">
                <label>Use Celsius</label>
                <description>Binding will use Celsius temperatures instead of Fahrenheit</description>
                <default>false</default>
            </parameter>
            <parameter name="refreshInterval" type="integer" required="false">
                <label>Refresh Interval</label>
                <description>How often (in seconds) to query the Tado servers for state updates</description>
                <default>30</default>
            </parameter>
        </config-description>
    </thing-type>
    
    <channel-type id="serverStatus">
        <item-type>Switch</item-type>
        <label>Server Status</label>
        <description>States whether the Tado servers are running and can be connected to</description>
        <state readOnly="true"></state>
    </channel-type>

    <channel-type id="mode">
        <item-type>String</item-type>
        <label>Mode</label>
        <description>The current mode</description>
        <state readOnly="true"></state>
    </channel-type>
    
    <channel-type id="humidity">
        <item-type>Number</item-type>
        <label>Humidity</label>
        <description>% Humidity according to Tado</description>
        <state readOnly="true"></state>
    </channel-type>
    
    <channel-type id="insideTemperature">
        <item-type>Number</item-type>
        <label>Inside Temperature</label>
        <description>Temperature according to Tado Thermostat</description>
        <state readOnly="true"></state>
    </channel-type>
    
    <!--<channel-type id="outsideTemperature">
        <item-type>Number</item-type>
        <label>Outside Temperature</label>
        <description>Temperature according to Weather Report</description>
        <state readOnly="true"></state>
    </channel-type>    
    
    <channel-type id="solarIntensity">
        <item-type>Number</item-type>
        <label>Solar Intensity</label>
        <description>Solar Intensity according to Weather Report</description>
        <state readOnly="true"></state>
    </channel-type>
    
    <channel-type id="weatherState">
        <item-type>String</item-type>
        <label>Weather State</label>
        <description>Weather State according to Weather Report</description>
        <state readOnly="true"></state>
    </channel-type>-->
    
    <channel-type id="linkState">
        <item-type>Switch</item-type>
        <label>Link State</label>
        <description>Tado Thermostat's link state to the Tado Servers</description>
        <state readOnly="true"></state>
    </channel-type>
    
    <channel-type id="heatingState">
        <item-type>Switch</item-type>
        <label>Heating State</label>
        <description>Current state (ON/OFF) of heating</description>
    </channel-type>
    
    <channel-type id="targetTemperature">
        <item-type>Number</item-type>
        <label>Target Temperature</label>
        <description>Current Target Temperature</description>
    </channel-type>
    
    <channel-type id="terminationTimer">
        <item-type>Number</item-type>
        <label>Termination Timer</label>
        <description>Timer in Minutes until the MANUAL Mode gets terminated</description>
    </channel-type>

</thing:thing-descriptions>
